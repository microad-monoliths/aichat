<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:id="@+id/ratingBar_layout"
    android:layout_height="wrap_content"
    android:background="@color/recommended_rank_background"
    android:paddingStart="20dp"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/ratingText_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/recommended_rank_background"
        android:paddingStart="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="5dp"
        android:text="@string/recommended_rank"
        android:textColor="@color/button_pressed"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@color/recommended_rank_background"
        android:clickable="false"
        android:focusable="true"
        android:numStars="3"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:progressTint="@color/button_pressed"
        android:rating="2"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:secondaryProgressTint="@color/button_pressed"
        android:stepSize="0.1"
        android:transformPivotX="0dp"
        android:transformPivotY="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/ratingText_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingText_textView"
        app:layout_constraintTop_toTopOf="@+id/ratingText_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>