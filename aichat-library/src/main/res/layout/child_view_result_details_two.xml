<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mainHeadline_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/headline_background"
        android:fontFamily="@font/noto_sans_jp_medium"
        android:text="@string/text_main_headline"
        android:textAlignment="center"
        android:textColor="@color/button_pressed"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageUrl_imageView"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/skincare_girl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainHeadline_textView" />

    <TextView
        android:id="@+id/description_textView"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/noto_sans_jp_medium"
        android:text="@string/dummy_message_result_two"
        android:textAlignment="center"
        android:textColor="@color/jp_text_gray_color"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageUrl_imageView"
        app:layout_constraintStart_toStartOf="@+id/imageUrl_imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageUrl_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>